<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/gameover_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              android:gravity="center"
              >
    <TextView android:id="@+id/gameover_text"
        android:text="@string/somebody_wins"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:gravity="center" android:textSize="36sp"/>
    <TextView android:id="@+id/gameover_score"
        android:text="@string/_00_00"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:gravity="center" android:textSize="36sp" android:paddingBottom="20sp" android:paddingTop="15sp"/>

<Button android:id="@+id/gameover_choice_new_game" 
android:layout_width="fill_parent" 
android:layout_height="wrap_content" android:textSize="24sp" android:text="@string/gameover_choices_new_game">
</Button>

    <Button
        android:id="@+id/gameover_choice_beginning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gameover_beginning"
        android:textSize="24sp"></Button>

    <Button
        android:id="@+id/gameover_choice_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gameover_choices_rotate"
        android:textSize="24sp"></Button>

    <Button android:id="@+id/gameover_choice_switch"
android:layout_width="fill_parent" 
android:layout_height="wrap_content" android:textSize="24sp" android:text="@string/gameover_choices_switch">
</Button>

<Button android:layout_width="fill_parent" android:textSize="24sp" android:id="@+id/gameover_choice_options" android:text="@string/gameover_choices_options" android:layout_height="wrap_content"></Button>

<Button android:id="@+id/gameover_choice_email" 
android:layout_width="fill_parent" 
android:layout_height="wrap_content" android:textSize="24sp" android:text="@string/gameover_choices_email">
</Button>

<Button android:id="@+id/gameover_choice_cancel" 
android:layout_width="fill_parent" 
android:layout_height="wrap_content" android:textSize="24sp" android:text="@string/gameover_choices_cancel">
</Button>


</LinearLayout>